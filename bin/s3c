#!/bin/bash


    # script
    script_path=$( dirname $0 )


    # aws - s3 - cp
    aws s3 cp "$script_path/../index.html"           's3://magento2setup.com/index.html'
    aws s3 cp "$script_path/../img/icon.256x256.png" 's3://magento2setup.com/img/icon.256.256.png'


    # cp - ubuntu-14.04-git-latest
    mkdir -p    "$script_path/../ubuntu-14.04-lts-git-latest"
    mkdir -p    "$script_path/../ubuntu-14.04-lts-git-latest/bin"
    cp -v       "$script_path/../../ubuntu-14.04-lts-git-latest/bin/getup"  "$script_path/../ubuntu-14.04-lts-git-latest/bin/getup"
    cp -v       "$script_path/../../ubuntu-14.04-lts-git-latest/bin/setup"  "$script_path/../ubuntu-14.04-lts-git-latest/bin/setup"
    aws s3 cp   "$script_path/../ubuntu-14.04-lts-git-latest/bin/getup"     's3://magento2setup.com/ubuntu-14.04-lts-git-latest/bin/getup'
    aws s3 cp   "$script_path/../ubuntu-14.04-lts-git-latest/bin/setup"     's3://magento2setup.com/ubuntu-14.04-lts-git-latest/bin/setup'

    # cp - ubuntu-14.04-git-latest
    mkdir -p    "$script_path/../ubuntu-14.04-lts-git-2.1"
    mkdir -p    "$script_path/../ubuntu-14.04-lts-git-2.1/bin"
    cp -v       "$script_path/../../ubuntu-14.04-lts-git-2.1/bin/getup"     "$script_path/../ubuntu-14.04-lts-git-2.1/bin/getup"
    cp -v       "$script_path/../../ubuntu-14.04-lts-git-2.1/bin/setup"     "$script_path/../ubuntu-14.04-lts-git-2.1/bin/setup"
    aws s3 cp   "$script_path/../ubuntu-14.04-lts-git-2.1/bin/getup"        's3://magento2setup.com/ubuntu-14.04-lts-git-2.1/bin/getup'
    aws s3 cp   "$script_path/../ubuntu-14.04-lts-git-2.1/bin/setup"        's3://magento2setup.com/ubuntu-14.04-lts-git-2.1/bin/setup'


